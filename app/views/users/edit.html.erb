<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <p>Name</p>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前",size:"47" %>
      </div>
      <div class="form-group">
        <p>Image</p>
        <%= f.attachment_field :profile_image %>
      </div>
      <div class="form-group">
        <p>Introduction</p>
        <%= f.text_area :introduction, autofocus:true, id:"Introduction",size: "50" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
  