<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<div class="container">
　<div class="row">
　　<div class="col-md-3">
　    <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <thead>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
        </thead>
        <tbody>
          <td>introduction</td>
          <td><%= @user.introduction %></td>
        </tbody>
      </table>
        <%= link_to "", edit_user_path(@user), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
    　<h2>New book</h2>
        <%= form_with model: @book, local:true do |f| %>
          <p>Title</p>
          <%= f.text_field :title %>

          <p>Opinion</p>
          <%= f.text_area :body %>
          <p><%= f.submit "Create Book", class: "btn btn-success" %></p>
        <% end%>
    </div>
    
    <div class="col-md-8 offset-md-1 box">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20' %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

